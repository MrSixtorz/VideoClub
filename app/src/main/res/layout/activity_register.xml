<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".Register">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Registro"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#00FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/marca"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:scaleType="centerInside"
                android:src="@drawable/vc_marca" />

            <TextView
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Unete ahora"
                android:textColor="@color/amarillo"
                android:textSize="24sp"
                android:typeface="normal" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/campoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/Registro"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/introducir_nombre"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/ambar"
        app:boxStrokeColor="@color/ambar"
        app:hintTextColor="@color/ambar"
        tools:ignore="Autofill">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campoNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/amarillo" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/campoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/campoNombre"
        android:layout_alignStart="@id/campoNombre"
        android:layout_alignEnd="@id/campoNombre"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/introducir_email"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/amarillo"
        android:textColorHint="@color/ambar"
        app:boxStrokeColor="@color/ambar"
        app:hintTextColor="@color/ambar"
        tools:ignore="Autofill,TextFields">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campoEm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/amarillo" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/campoContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/campoEmail"
        android:layout_alignStart="@id/campoNombre"
        android:layout_alignEnd="@id/campoNombre"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/introducir_contrasegna"
        android:minHeight="48dp"
        android:textColor="@color/amarillo"
        android:textColorHint="@color/ambar"
        app:boxStrokeColor="@color/ambar"
        app:hintTextColor="@color/ambar"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/ambar"
        tools:ignore="Autofill,TextFields,TextContrastCheck">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campoCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/amarillo"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/campoRepetirContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/campoContraseña"
        android:layout_alignStart="@id/campoNombre"
        android:layout_alignEnd="@id/campoNombre"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/repetir_contrasegna"
        android:minHeight="48dp"
        android:textColor="@color/amarillo"
        android:textColorHint="@color/ambar"
        app:boxStrokeColor="@color/ambar"
        app:hintTextColor="@color/ambar"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/ambar"
        tools:ignore="Autofill,TextFields">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campoRepetirCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/amarillo"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/selAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/campoRepetirContraseña"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="Selecciona un Avatar deslizando a izquierda o derecha"
        android:textColor="@color/amarillo"
        android:textSize="15sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewAvatar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/selAvatar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">
    </androidx.viewpager2.widget.ViewPager2>

    <Button
        android:id="@+id/Cancelar"
        android:layout_width="144dp"
        android:layout_height="72dp"
        android:layout_below="@id/viewAvatar"
        android:layout_alignStart="@id/campoNombre"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/amarillo"
        android:contentDescription="@string/cancelar"
        android:scaleType="centerInside"
        android:text="Cancelar"
        android:textColor="@color/azulmarino"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Registrar"
        android:layout_width="144dp"
        android:layout_height="72dp"
        android:layout_below="@id/viewAvatar"
        android:layout_alignEnd="@id/campoRepetirContraseña"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/amarillo"
        android:scaleType="centerInside"
        android:text="Unirse"
        android:textColor="@color/azulmarino"
        android:textStyle="bold"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />


</RelativeLayout>